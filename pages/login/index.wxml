<view class="main">
  <view class="login">
    <view class="kuang shadow">
      <view class="hint">{{userName}}</view>
      <open-data class="avatar-open" type="userAvatarUrl"></open-data>
      <view class="form-group">
        <view class="title">账号：</view>
        <input placeholder="管理员账号" maxlength="30" bindinput="content" placeholder-class="phc" model:value="{{userid}}"></input>
      </view>
      <view class="form-group">
        <view class="title">密码：</view>
        <input placeholder="管理员密码" maxlength="30" bindinput="password" type="password" placeholder-class="phc" model:value="{{password}}"></input>
      </view>
      <button class="btn" bindtap="getUserProfile">点击登录</button>
      <view bindtap="url" class="return">返回</view>
    </view>
  </view>
  <view class="bottom"></view>
</view>